{% block content %}

<h1>Menu</h1>
<section class="menu">
    <div class="menu-box">

        {% for item in items %}
        <ul style="list-style-type:none;">
            {% if item.category == "Bao" %}
            <span>&#129377;</span>

            {% elif item.category == "Noodles" %}
            <span>&#127836;</span>
            {%else%}
            <span>&#129483;</span>
            {% endif %}

            <li>
                <p class="text">{{item.name}}: Â£{{item.price}}</p>
            </li>
        </ul>
        {% endfor %}

    </div>
</section>
{% endblock content %}