{% extends 'base.jinja' %}
{% block content %}
<section class="body">
    Order Number: {{order.id}}
    {{order.user_id.name}}
    {% for orderitem in order.items %}
    <ul>
        <li>{{orderitem.item.category}}: {{orderitem.item.name}}-----£{{orderitem.item.price}} * {{orderitem.quantity}}</li>
        
        {% endfor %}
        <p>Total: £{{total_order_price}}</p>
        <hr>
        <li>Notes: {{order.notes}}</li>
        <li>Phone Number: {{order.user.phone}}</li>
        <li>Address: {{order.user.address}}</li>
    </ul>
    <button onclick="window.location.href='/orders/{{order.id}}/edit';" class="buttons">Edit Order</button>
    {# delete modal #}
    <button class="buttons" onclick="document.getElementById('id01').style.display='block'">Delete Order</button>

    <div id="id01" class="modal">
        <span onclick="document.getElementById('id01').style.display='none'" class="close"
            title="Close Modal">&times;</span>
        <form class="modal-content" action="/orders/{{order.id}}/delete" method="POST">
            <div class="container">
                <p>Are you sure you want to delete the order?</p>
                <div class="clearfix">
                    <button type="button" onclick="document.getElementById('id01').style.display='none'" class="cancelbtn">Cancel</button>
                    <button class="deletebtn" type="submit" value="Delete">Delete</button>
        </form>
    </div>
    </div>
    </form>
    </div>


</section>

{% endblock content %}