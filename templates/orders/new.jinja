{% extends 'base.jinja' %}
{% block content %}
<h1>Add New Order</h1>
<form action="/orders/new" method="post">
<div>
    <label for="user_id">Select Your Account</label>
    <select name="user_id" id="user_id" required>
        {% for user in users %}
        <option value="{{user.id}}">{{ user.name }}</option>
        {% endfor %}
    </select>
</div>

<div>
    {% for item in items %}
    <input type="checkbox" name="{{item.id}}" value="{{ item.id }}" multiple>
    <label for="item_id">{{item.name}}:  Â£{{item.price}}</label>
    <br>
    {% endfor %}
</div>
<div>
<label for="notes">
<input name="notes" id="notes" type="text" placeholder="Please leave your special reqirement. e.g. 'Less sugar'"></label>
</div>
<button type="submit">Place Order</button>
</form>  
{% endblock content %}